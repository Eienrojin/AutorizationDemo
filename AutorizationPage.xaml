<Page x:Class="AutorizationDemo.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutorizationDemo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage">

    <Grid>
        <TextBlock Text="Логин" Height="20" Width="40" Margin="258,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBlock>
        <TextBox x:Name="LoginTextBox" Width="176" Height="20" Margin="0,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"></TextBox>
        <TextBox x:Name="PasswordTextBox" Width="175" Height="20" Margin="0,93,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"></TextBox>
        <TextBlock Text="Пароль" Height="20" Width="40" Margin="258,93,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button Name="EnterButton" Content="Вход" Width="176" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" Click="EnterButton_Click"/>
    </Grid>
</Page>
